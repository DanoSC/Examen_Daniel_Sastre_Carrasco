<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/ejercicio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ejercicio4"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/ejercicio2descripciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ejercicio4_descripcion"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewIcono"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/trampolin"
            android:contentDescription="Icono" />
    </LinearLayout>
</FrameLayout>